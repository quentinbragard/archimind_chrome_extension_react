{
  "manifest_version": 3,
  "name": "Archimind Chrome Extension",
  "version": "1.0.9",
  "description": "Intercepts ChatGPT messages and saves them to your backend service.",
  "permissions": [
    "storage",
    "scripting",
    "identity"
  ],
  "oauth2": {
    "client_id": "32108269805-41r18uv12i7ckqqo9ice7dr7jbe50qgp.apps.googleusercontent.com",
    "scopes": [
      "openid",
      "email",
      "profile"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "welcome.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}